@model DWebProjetoFinal.Entities.UserAccount

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Perfil</h1>

<div class="card mb-4 border-0 shadow-sm mt-4">
    <div class="card-body">
        <form asp-controller="Account" asp-action="Edit" method="post" enctype="application/x-www-form-urlencoded" class="row g-3">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />

            <!-- Primeiro Nome -->
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label fw-bold">Primeiro Nome</label>
                <input asp-for="FirstName" class="form-control border-0 border-bottom rounded-0" style="background: #f8f9fa;" placeholder="Inserir" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Último Nome -->
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label fw-bold">Último Nome</label>
                <input asp-for="LastName" class="form-control border-0 border-bottom rounded-0" style="background: #f8f9fa;" placeholder="Inserir" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="col-md-6">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control border-0 border-bottom rounded-0" style="background: #f8f9fa;" placeholder="Inserir" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Nome de Utilizador -->
            <div class="col-md-6">
                <label asp-for="UserName" class="form-label fw-bold">Nome de Utilizador</label>
                <input asp-for="UserName" class="form-control border-0 border-bottom rounded-0" style="background: #f8f9fa;" placeholder="Inserir" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Botão Guardar -->
            <div class="col-md-3 offset-md-9">
                <button type="submit" class="btn btn-dark w-100 py-2 fw-bold">GUARDAR ALTERAÇÕES</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}