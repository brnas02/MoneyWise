<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MoneyWise</title>
    <link rel="icon" type="image/png" href="~/white_logo.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DWebProjetoFinal.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body.dark-mode {
            background-color: #121212;
            color: #ffffff;
        }

        .dark-mode .navbar {
            background-color: #222 !important;
            border-bottom: 1px solid #444;
        }

        .dark-mode .footer {
            background-color: #222 !important;
            color: #ffffff !important;
            border: 1px solid #444;
        }

        .dark-mode .nav-link,
        .dark-mode .navbar-brand {
            color: #ffffff !important;
        }

        .custom-switch label {
            white-space: nowrap;
        }

        .custom-switch .form-check-input {
            margin: 0 8px;
            transform: scale(1.2);
        }

            .custom-switch .form-check-input:checked {
                background-color: #A9A9A9 !important;
                border-color: #A9A9A9 !important;
            }

        .theme-icon {
            font-size: 20px;
        }

            .theme-icon.sun {
                color: #FFA500;
            }

            .theme-icon.moon {
                color: #B0C4DE;
                margin-right: 30px
            }

        .theme-toggle {
            font-size: 24px;
            cursor: pointer;
            transition: transform 0.3s ease;
            margin-right: 15px;
        }

            .theme-toggle:hover {
                transform: scale(1.1);
            }

        #theme-icon {
            color: #FFA500; /* Sol por padrão */
            transition: color 0.3s ease;
        }

        .dark-mode #theme-icon {
            color: #B0C4DE; /* Lua quando estiver no modo escuro */
        }

        .btn {
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            border-radius: 10px;
            padding: 2px 8px;
            font-size: 16px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            gap: 8px;
        }

        /* Botões no light mode */
        .login-btn {
            color: #000000;
            border: 2px solid #000000;
        }

            .login-btn:hover {
                background-color: #000000;
                color: #ffffff;
            }

        .logout-btn {
            color: #ffffff;
            border: 2px solid #ffffff;
        }

            .logout-btn:hover {
                background-color: #ffffff;
                color: #000000;
            }

        .register-btn {
            color: #000000;
            border: 2px solid #000000;
        }

            .register-btn:hover {
                background-color: #000000;
                color: #ffffff;
            }

        /* Botões no dark mode */
        .dark-mode .login-btn {
            color: #ffffff;
            border: 2px solid #ffffff;
        }

            .dark-mode .login-btn:hover {
                background-color: #ffffff;
                color: #000000;
            }

        .dark-mode .register-btn {
            color: #ffffff;
            border: 2px solid #ffffff;
        }

            .dark-mode .register-btn:hover {
                background-color: #ffffff;
                color: #000000;
            }

        .logout-btn {
            color: #ffffff;
            border: 2px solid #ffffff;
        }

            .logout-btn:hover {
                background-color: #ffffff;
                color: #000000;
            }

        .navbar {
            border-radius: 15px; /* Cantos arredondados */
            margin: 10px 20px; /* Distância do topo e das laterais */
            padding: 10px 20px; /* Espaçamento interno */
            background-color: white !important; /* Mantém o fundo visível */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Sombra para destaque */
            border: 1px solid #ddd; /* Borda suave para realce */
        }

        .footer {
            border-radius: 15px; /* Cantos arredondados */
            margin: 10px 20px; /* Distância do topo e das laterais */
            padding: 10px 20px; /* Espaçamento interno */
            max-width: 98%; /* Tem de ser alterado */
            background-color: white !important; /* Mantém o fundo visível */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Sombra para destaque */
            border: 1px solid #ddd; /* Borda suave para realce */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" alt="MoneyWise Logo" height="40">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="theme-toggle">
                        <i id="theme-icon" class="fas fa-sun"></i>
                    </div>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MoneyWise
        </div>
    </footer>
    <script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        const themeIcon = document.getElementById("theme-icon");
        const body = document.body;

        // Verifica se há um tema salvo no localStorage e aplica
        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("dark-mode");
            themeIcon.classList.replace("fa-sun", "fa-moon");
        }

        // Ao clicar no ícone, alterna entre os modos
        themeIcon.addEventListener("click", function () {
            if (body.classList.contains("dark-mode")) {
                body.classList.remove("dark-mode");
                themeIcon.classList.replace("fa-moon", "fa-sun");
                localStorage.setItem("theme", "light");
            } else {
                body.classList.add("dark-mode");
                themeIcon.classList.replace("fa-sun", "fa-moon");
                localStorage.setItem("theme", "dark");
            }
        });
    });
</script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
