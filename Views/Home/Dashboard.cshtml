            border-bottom: 1px solid #f0f0f0;
        }

    .box-situacao {
        background-color: #fff;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        flex: 1;
        min-width: 300px;
        max-width: 100%;
        margin-bottom: 30px;
    }

    .dashboard-row {
        display: flex;
        gap: 40px;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 30px;
        margin-bottom: 60px;
        align-items: stretch;
    }
</style>