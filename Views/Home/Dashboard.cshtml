        text-align: center;
        font-size: 1.2em;
    }

    .charts {
        display: flex;
        gap: 40px;
        flex-wrap: wrap;
    }

        .charts > div {
            flex: 1;
            min-width: 300px;
            max-width: 600px;
        }

    canvas {
        max-width: 100%;
        max-height: 300px;
    }

    .categoria-legenda {
        list-style: none;
        padding-left: 0;
        margin-top: 30px;
    }

        .categoria-legenda li {
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.95em;
        }

    .cor-legenda {
        display: inline-block;
        width: 16px;
        height: 16px;
        border-radius: 3px;
    }

    .despesas-e-grafico {
        display: flex;
        gap: 40px;
        margin-top: 30px;
        flex-wrap: wrap;
        margin-bottom: 60px;
    }

    .box-despesas, .box-grafico {
        background-color: #fff;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        flex: 1;
        min-width: 300px;
        max-width: 500px;
    }

        .box-despesas table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .box-despesas th {
            text-align: left;
            font-weight: 600;
            font-size: 0.95em;
            color: #555;
