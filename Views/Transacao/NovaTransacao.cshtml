@model DWebProjetoFinal.Entities.Transacao
@{
    ViewData["Title"] = "Nova Transação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Formulário -->
<div class="card mb-4 border-0 shadow-sm">
    <div class="card-body">
        <h4 class="mb-4">Nova Transação</h4>
        <form asp-action="NovaTransacao" method="post" class="row g-3 align-items-end">
            @Html.AntiForgeryToken()

            <!-- Mensagens de Erro -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger col-12">
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <!-- Tipo de Transação -->
            <div class="col-md-3">
                <label asp-for="TipoTransacao" class="form-label fw-bold">Tipo de Transação</label>
                <select asp-for="TipoTransacao" class="form-select border-0 border-bottom rounded-0" style="background: #f8f9fa;">
                    <option value="Receita">Receita</option>
                    <option value="Despesa">Despesa</option>
                </select>
                <span asp-validation-for="TipoTransacao" class="text-danger small"></span>
            </div>

            <!-- Categoria -->
            <div class="col-md-3">
                <label asp-for="Categoria" class="form-label fw-bold">Categoria</label>
                <input asp-for="Categoria" class="form-control border-0 border-bottom rounded-0" style="background: #f8f9fa;" placeholder="Inserir" />
                <span asp-validation-for="Categoria" class="text-danger small"></span>
            </div>

            <!-- Valor -->
            <div class="col-md-3">
                <label asp-for="Valor" class="form-label fw-bold">Valor (€)</label>
                <input asp-for="Valor" type="number" step="0.01"
                       class="form-control border-0 border-bottom rounded-0"
                       style="background: #f8f9fa;" placeholder="Inserir" />
                <span asp-validation-for="Valor" class="text-danger small"></span>
            </div>

            <!-- Data -->
            <div class="col-md-3">
                <label asp-for="Data" class="form-label fw-bold">Data</label>
                <input asp-for="Data" type="date" class="form-control border-0 border-bottom rounded-0" style="background: #f8f9fa;" />
                <span asp-validation-for="Data" class="text-danger small"></span>
            </div>

            <!-- Descrição -->
            <div class="col-md-6">
                <label asp-for="Descricao" class="form-label fw-bold">Descrição (Opcional)</label>
                <input asp-for="Descricao" class="form-control border-0 border-bottom rounded-0" style="background: #f8f9fa;" placeholder="Inserir" />
                <span asp-validation-for="Descricao" class="text-danger small"></span>
            </div>

            <!-- Botão Salvar -->
            <div class="col-md-3 offset-md-9">
                <!-- Alinhado à direita -->
                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                    SALVAR
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- CSS Adicional -->
<style>
    .form-control:focus, .form-select:focus {
        box-shadow: none;
        border-color: #ced4da !important;
    }

    .input-group-text {
        background-color: #f8f9fa !important;
        border-bottom: 1px solid #ced4da !important;
    }
</style>